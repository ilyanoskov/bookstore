@*@model IEnumerable<Bookstore.Models.Book>*@
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model PagedList.Core.IPagedList<Bookstore.Models.Book>

<style>
    div.container input {
        display: grid;
        padding: 5px;
        font-weight: 900;
        margin-left: 20px;
        margin-right: 15px;
    }

    div.one > input:nth-child(1) {
        display: none;
    }

    div .container {
        list-style-type: none;
        font-size: 18px;
        font-weight: 900;
        margin-top: 1px;
        padding-left: 15px;
        padding-right: 10px;
    }

    div.container label {
            list-style-type: none;
            font-size: 16px;
            font-weight: 900;
            margin-top: 1px;
            display: flex;
            padding: 5px;

    }

        div.container a {

            text-decoration: underline;
            color: black;
        }

    div.container label:hover {
            color: #FCB326;
    }

    div.holder {
        width: 600px;
        overflow: hidden;
        position: relative;
        display: flex;
    }

    div.holder1, div.holder2 {
        width: 1150px;
        padding-top: 10px;
        overflow: hidden;
        position: relative;
        display: flex;
        flex-wrap: wrap;
        align-content: flex-start;
    }

    div.hold-book img {
        height: 300px;
        transition: transform .8s ease-in-out;
        box-shadow: 5px 8px #888888;
    }

    div.hold-book {
        width: 250px;
        margin-left: 30px;
        margin-top: 50px;
        text-align: center;
    }

        div.hold-book h4 {
            font-style: italic;
        }

        div.hold-book a.book p {
            font-size: 18px;
            font-weight: 900;
            color: #FCB326;
        }

        div.hold-book a.book h4, h3 {
            color: black;
        }

        div.hold-book a.book:visited {
            color: black;
        }

        div.hold-book a.book {
            text-decoration: none;
            color: black;
        }

        div.hold-book img:hover {
            cursor: pointer;
            transform: translate3d(0px, -5px, 0px);
        }
</style>

<!-- Image -->

<div class="new">
</div>

<!-- Image -->


<div class="books">
    <!-- One Giant Div -->



    <div class="hello">

        <h2 class="filt">Categories</h2>
            <div class="container">
                <label><a href="/">All</a></label>
                <label><a href="/?CategoryId=6">Poetry</a></label>               
                <label><a href="/?CategoryId=7">Modern &amp; contemporary fiction (post c 1945)</a></label>
                <label><a href="/?CategoryId=8">TV / celebrity chef cookbooks</a></label>
                <label><a href="/?CategoryId=9">Thriller / suspense</a></label>
                <label><a href="/?CategoryId=10">Science fiction</a></label>
                <label><a href="/?CategoryId=12">Historical fiction</a></label>
                <label><a href="/?CategoryId=13">Classic fiction (pre c 1945)</a></label>
                <label><a href="/?CategoryId=14">Fantasy</a></label>
                <label><a href="/?CategoryId=15">Crime &amp; mystery</a></label>
                <label><a href="/?CategoryId=16">Travel &amp; holiday guides</a></label>
            </div>


    </div>

    <!-- Filters -->
    <!-- Books -->

    <div class="holder2">

        @if (Model.Count() == 0)
        {
            <div>

                <h1>The category does not exist!</h1>
            </div>
        }


        @foreach (var item in Model)
        {
            var count = 200;
            <div class="hold-book">
                <a class="book" href="/books/details/@item.id">
                    <br />
                    <img src="https://picsum.photos/200/300/" />
                    <p>
                        @Html.DisplayFor(modelItem => item.Title)
                    </p>
                    <h4>
                        @Html.DisplayFor(modelItem => item.Author)
                    </h4>
                    <h3>
                        &pound;
                        @Html.DisplayFor(modelItem => item.Price)
                    </h3>
                </a>
            </div>
        }
    </div>
</div><!-- One Giant Div -->


<div class="pagination">
    <p style="color:blue;">
        <pager list="@Model" aps-controller="Home" aps-action="Index"></pager>
    </p>
</div>