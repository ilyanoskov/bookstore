@model IEnumerable<Bookstore.Data.ApplicationUser>
@{
    ViewData["Title"] = "Purchase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .header {
        margin: auto;
    }

    .basket {
        display: flex;
        flex-direction: column;
        margin: auto;
        padding: 50px;
    }

    .total {
        margin: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        font-weight: 700;
    }

    .basket-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        padding: 30px;
        min-height: 150px;
    }

   .btn2 {
        width: 100px;
        height: 30px;
        border-radius: 30px;
        color: #FCB326;
        border: 1px solid #ECE49B;
        background-color: #000;
        font-size: 20px;
        font-family: 'Cabin Sketch', sans-serif;
        margin: auto;
    }

       .btn2:hover {
            cursor: pointer;
            background-color: #FCB326;
            border: #FCB326;
            color: #fff;
        }

        
</style>

