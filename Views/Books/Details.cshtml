@model Bookstore.Models.Book

@{
    ViewData["Title"] = "Details";
}

<style>
    .sub {
        font-weight: 600;
        margin-left: 20px;
    }

    .info {
        margin-top: 10px;
        color: #FCB326;
        font-weight: 600;
        margin-left: 50px;
        margin-bottom: 20px;
    }

    .direct {
        color: black;
        text-decoration: none;
        font-size: 20px;
        font-family: 'Cabin Sketch', sans-serif;
        font-weight: 600;
        text-align: center;
    }

        .direct:hover {
            color: #FCB326;
        }

    #dir {
        margin-left: 20px;
        margin-right: 10px;
    }
</style>

<h3 style="text-align:center; margin-top:50px; margin-bottom:50px;"><i class="fa fa-book" aria-hidden="true"></i>Book Details</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="sub">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="info">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="sub">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="info">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="sub">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="info">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="sub">
            @Html.DisplayNameFor(model => model.PublicationYear)
        </dt>
        <dd class="info">
            @Html.DisplayFor(model => model.PublicationYear)
        </dd>
        <dt class="sub">
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd class="info">
            @Html.DisplayFor(model => model.Publisher)
        </dd>
        <dt class="sub">
            @Html.DisplayNameFor(model => model.Pages)
        </dt>
        <dd class="info">
            @Html.DisplayFor(model => model.Pages)
        </dd>
        <dt class="sub">
            @Html.DisplayNameFor(model => model.Resume)
        </dt>
        <dd class="info">
            @Html.DisplayFor(model => model.Resume)
        </dd>
        <dt class="sub">
            @Html.DisplayNameFor(model => model.CoverType)
        </dt>
        <dd class="info">
            @Html.DisplayFor(model => model.CoverType)
        </dd>
        <dt class="sub">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="info">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="sub">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="info">
            @Html.DisplayFor(model => model.Stock)
        </dd>
    </dl>
</div>

<div>
    <i class="fa fa-pencil" aria-hidden="true" id="dir"></i><a asp-action="Edit" asp-route-id="@Model.id" class="direct">Edit</a> &nbsp; |   &nbsp;
    <i class="fa fa-arrow-left" aria-hidden="true" style="margin-right:10px;"></i> @Html.ActionLink("Back to List", "Index", "Books", "", new { @class = "direct" })

</div>
