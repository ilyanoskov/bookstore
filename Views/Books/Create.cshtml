@model Bookstore.Models.Book

@{
    ViewData["Title"] = "Create";
}

<style>
    div.liner {
        display: flex;
        margin-left: 20px;
        font-weight: 600;
        font-family: 'Cabin Sketch', sans-serif;
    }

    div.col-md-10 {
        margin-left: 20px;
        margin-bottom: 20px;
        font-family: 'Cabin Sketch', sans-serif;
    }

    .form-control {
        font-size: 15px;
        font-family: 'Cabin Sketch', sans-serif;
        color: #FCB326;
        font-weight: 600;
    }

    .col-md-2 {
        margin-top: 5px;
    }

    input.btn2 {
        width: 130px;
        height: 50px;
        border-radius: 30px;
        color: #FCB326;
        border: 1px solid #ECE49B;
        background-color: #000;
        font-size: 20px;
        font-family: 'Cabin Sketch', sans-serif;
        margin-left: 50px;
    }

        input.btn2:hover {
            cursor: pointer;
            background-color: #FCB326;
            border: #FCB326;
            color: #fff;
        }

    .direct {
        color: black;
        text-decoration: none;
        font-size: 20px;
        font-family: 'Cabin Sketch', sans-serif;
        font-weight: 600;
        text-align: center;
    }

        .direct:hover {
            color: #FCB326;
        }
</style>

<h3 style="text-align:center; margin-top:50px; margin-bottom:50px;"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;Create New Book Entry</h3>
<hr />

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="liner">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
